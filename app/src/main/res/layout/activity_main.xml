<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".MainActivity"
    android:background="@drawable/gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="60dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:drawableEnd="@drawable/homepage_black_48"
            android:fontFamily="@font/crimson_regular"
            android:gravity="center|left"
            android:text="+UFRJ"
            android:textColor="@color/colorBlack"
            android:textSize="50sp"
            android:textStyle="normal" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnServicos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="@drawable/button_round"
            android:ems="8"
            android:text="Serviços"
            android:textAlignment="center"
            android:elevation="16dp"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/btnAlimentacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alimentação"
            android:layout_margin="20dp"
            android:ems="8"
            android:background="@drawable/button_round"
            android:textAlignment="center"
            android:elevation="16dp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnAulas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:ems="8"
            android:background="@drawable/button_round"
            android:textAlignment="center"
            android:text="Aulas"
            android:elevation="16dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnContribuir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:ems="8"
            android:background="@drawable/button_round"
            android:textAlignment="center"
            android:text="Contribuir"
            android:elevation="16dp"
            android:textStyle="bold"
            />
    </LinearLayout>

</LinearLayout>